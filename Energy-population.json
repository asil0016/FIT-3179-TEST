{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 560,
    "height":300,
    "background": "azure",
    "data": {
    "url": "https://raw.githubusercontent.com/asil0016/FIT-3179-TEST/DatVis2/Table%20B%20(Population%20and%20GSP).csv"
    },
    "params": [
      {
        "name": "state_highlight",
        "select": {"type": "point", "fields": ["States"]},
        "bind": "legend"
      }
    ],
    "mark": "circle",
    "encoding": {
      "x": {
        "field": "Year",
        "type": "nominal"
        },
        "y": {
          "field": "Population Number",
          "type": "quantitative",
          "title": "Population Number"
          },
        "color": {
          "field": "States",
          "type": "nominal",
          "scale": {"scheme": "set1"}
          },
        "opacity": {
          "condition": {"param": "state_highlight", "value": 1},
          "value": 0.2
        },
        "size": {
          "field": "Energy Consumption",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [300, 600, 900, 1200, 1500],
            "range": [25, 100, 350, 700, 1200, 1800]
          },
          "legend": {"title": "Energy Consumption (PJ)"}
          },
          "tooltip": [
            {"field": "Energy Consumption", "type": "quantitative"},
            {"field": "Population Number", "type": "quantitative"}
          ]
        }
      }