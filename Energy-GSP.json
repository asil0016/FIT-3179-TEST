{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "A dual axis chart, created by setting y's scale resolution to `\"independent\"`",
    "width": 750,
    "height":350,
    "background": "azure",
    "data": {
      "url": "https://raw.githubusercontent.com/asil0016/FIT-3179-TEST/DatVis2/Table%20B%20(Population%20and%20GSP).csv"
    },
    "params":[
      {
        "name": "states_selection",
        "value": 2010,
        "bind": {
          "input": "select",
          "options": [
            "New South Wales",
            "Victoria",
            "Queensland",
            "Western Australia",
            "South Australia",
            "Tasmania",
            "Northern Territory"
          ],
          "labels":[
            "New South Wales",
            "Victoria",
            "Queensland",
            "Western Australia",
            "South Australia",
            "Tasmania",
            "Northern Territory"
          ],
          "name": "States: "
        }
      }
    ],
    "transform": [{"filter": "datum.States == states_selection"}],
    "encoding": {
      "x": {
        "field": "Year",
        "type": "nominal"
      }
    },
    "layer": [
      {
        "mark": {
          "opacity": 0.5,
          "type": "line",
          "point": {
            "filled": false,
            "fill": "white"},
            "color": "#800020",
            "interpolate": "monotone"},
        "encoding": {
          "y": {
            "field": "Energy Consumption",
            "type":"quantitative",
            "title": "Energy Consumption (PJ)",
            "axis": {"titleColor": "black"}
          }
        }
      },
      {
        "mark": {
          "type": "line",
          "point": {
            "filled": false,
            "fill": "white"},
            "color": "#E97451",
            "interpolate": "monotone"},
        "encoding": {
          "y": {
            "field": "GSP",
            "title": "GSP (Million)",
            "axis": {"titleColor":"black"}
          }
        }
      }
    ],
    "resolve": {"scale": {"y": "independent"}}
  }
